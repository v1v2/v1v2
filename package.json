    "@commitlint/config-conventional": "^13.2.0",
    "@parcel/packager-ts": "^2.0.0",
    "@parcel/transformer-typescript-types": "^2.0.0",
    "@types/jest": "^27.0.2",
    "husky": "^7.0.2",
    "jest": "^27.2.5",
    "lerna": "^4.0.0",
    "parcel": "^2.0.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  }
